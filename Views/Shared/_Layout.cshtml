<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quan_Ly_TTDT</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Quan_Ly_TTDT.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="container header-container">
            <div class="logo">
                <div class="logo-circle">E</div>
                <div class="logo-text">EduManager</div>
            </div>
            <ul class="nav-menu">
                <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li><a asp-controller="Course" asp-action="Index">Khoá học</a></li>
                <li><a href="#">Tính năng</a></li>
                <li><a asp-controller="Review" asp-action="Index">Giới thiệu</a></li>
                <li><a asp-controller="Contact" asp-action="Index">Liên hệ</a></li>
            </ul>
            <div class="auth-buttons">
                <a asp-controller="Account" asp-action="login" class="btn btn-outline">Đăng nhập</a>
                <a asp-controller="Account" asp-action="register" class="btn btn-primary">Đăng ký</a>

            </div>

        </div>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-grid">
                <div class="footer-column">
                    <div class="logo">
