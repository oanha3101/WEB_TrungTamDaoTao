            <!-- Map -->
            <div class="map-container">
                <div class="map-placeholder">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3833.832329192799!2d108.2182057152582!3d16.074825288875376!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31421830a573a7cb%3A0x1bc0549c7280961e!2zNTUgUXVhbmcgVHJ1bmcsIEjDoCBOZ2jhu4csIEjDoCBOZ2jhu4csIMSQw6AgTuG6tW5nIDU1MDAwMA!5e0!3m2!1svi!2s!4v1713261349221!5m2!1svi!2s"
