<script>
    // Current form type
    let currentFormType = 'contact';

    // Change tab function
    function changeTab(tabType) {
        // Update active tab
        document.getElementById('tab-contact').classList.remove('tab-active');
        document.getElementById('tab-demo').classList.remove('tab-active');
        document.getElementById('tab-partner').classList.remove('tab-active');
        document.getElementById('tab-' + tabType).classList.add('tab-active');

        // Update form title
        const formTitle = document.getElementById('form-title');
        if (tabType === 'contact') {
            formTitle.textContent = 'Gửi tin nhắn cho chúng tôi';
        } else if (tabType === 'demo') {
            formTitle.textContent = 'Đăng ký demo sản phẩm';
        } else if (tabType === 'partner') {
            formTitle.textContent = 'Đăng ký hợp tác kinh doanh';
        }

        // Update submit button text
        const submitText = document.getElementById('submit-text');
        if (tabType === 'contact') {
            submitText.textContent = 'Gửi tin nhắn';
        } else if (tabType === 'demo') {
            submitText.textContent = 'Đăng ký demo';
        } else if (tabType === 'partner') {
            submitText.textContent = 'Đăng ký hợp tác';
        }

        // Update success message
        const successMessage = document.getElementById('success-message');
        if (tabType === 'contact') {
            successMessage.textContent = 'Tin nhắn của bạn đã được gửi thành công. Chúng tôi sẽ liên hệ lại với bạn trong thời gian sớm nhất.';
        } else if (tabType === 'demo') {
            successMessage.textContent = 'Yêu cầu demo của bạn đã được gửi thành công. Đội ngũ của chúng tôi sẽ liên hệ để sắp xếp lịch demo phù hợp.';
        } else if (tabType === 'partner') {
            successMessage.textContent = 'Thông tin đăng ký hợp tác của bạn đã được gửi thành công. Chúng tôi sẽ liên hệ để thảo luận chi tiết.';
        }

        // Show/hide additional fields
        document.getElementById('demo-fields').style.display = tabType === 'demo' ? 'grid' : 'none';
        document.getElementById('partner-fields').style.display = tabType === 'partner' ? 'grid' : 'none';

        // Update select options
        document.getElementById('contact-options').style.display = tabType === 'contact' ? 'block' : 'none';
        document.getElementById('demo-options').style.display = tabType === 'demo' ? 'block' : 'none';
        document.getElementById('partner-options').style.display = tabType === 'partner' ? 'block' : 'none';

        // Update current form type
        currentFormType = tabType;
    }

    // Form submission handler
    function handleSubmit(event) {
        event.preventDefault();
        // Simulate form submission
        setTimeout(() => {
            document.getElementById('contact-form').style.display = 'none';
            document.getElementById('form-success').style.display = 'flex';
        }, 1000);
    }

    // Reset form
    function resetForm() {
        document.getElementById('contact-form').reset();
        document.getElementById('contact-form').style.display = 'block';
        document.getElementById('form-success').style.display = 'none';
    }

    // Toggle FAQ accordion
    function toggleFaq(element) {
        const faqItem = element.parentElement;

        // Close all other FAQ items
        document.querySelectorAll('.faq-item.active').forEach(item => {
            if (item !== faqItem) {
                item.classList.remove('active');
            }
        });

        // Toggle current FAQ item
        faqItem.classList.toggle('active');
    }
</script>
