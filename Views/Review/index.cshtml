            </path>
        </svg>
    </div>
</section>

<section class="trusted-section">
    <div class="container">
        <h3>Được tin dùng bởi các tổ chức hàng đầu</h3>
        <div class="trusted-logos">
            <div class="logo-placeholder"></div>
            <div class="logo-placeholder"></div>
            <div class="logo-placeholder"></div>
            <div class="logo-placeholder"></div>
            <div class="logo-placeholder"></div>
        </div>
